<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e4d7e8" >
    <RelativeLayout
    android:id="@+id/top_layout"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical">
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal">
    <View 
    android:layout_width="22dp"
    android:layout_height="22dp"
    android:layout_gravity="center"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/circle"/>
     <View 
    android:layout_width="22dp"
    android:layout_height="22dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/circle"/>
     <View 
    android:layout_width="22dp"
    android:layout_height="22dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/circle"/>
          <View 
    android:layout_width="22dp"
    android:layout_height="22dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/circle"/>
            <View 
    android:layout_width="22dp"
    android:layout_height="22dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/circle"/>
             <View 
    android:layout_width="22dp"
    android:layout_height="22dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/circle"/>  
    </LinearLayout>
    
<TextView 
    android:layout_width="wrap_content"
    android:layout_height="28dp"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:gravity="center"
    android:layout_marginRight="200dp"
    android:text="2016年  05月01日上午  10:00"
    android:textColor="#000000"
    android:textSize="18dp"/>
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/text_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_layout"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical">
      <TextView 
        android:id="@+id/status_tv"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/btn_green"
        android:text="状态"
        android:textSize="22dp"
        android:textColor="#000000"/>
         <TextView 
        android:id="@+id/voice_tv"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/black_littlebg"
        android:text="语音"
        android:textSize="22dp"
        android:textColor="#000000"/>
      <TextView 
        android:id="@+id/statistics_tv"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/black_littlebg"
        android:text="统计"
        android:textSize="22dp"
        android:textColor="#000000"/>
       <TextView 
        android:id="@+id/signal_tv"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/black_littlebg"
        android:text="信号"
        android:textSize="22dp"
        android:textColor="#000000"/>
        <TextView 
        android:id="@+id/setting_tv"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/black_littlebg"
        android:text="设置"
        android:textSize="22dp"
        android:textColor="#000000"/>  
         <TextView 
        android:id="@+id/more_tv"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/black_littlebg"
        android:text="更多"
        android:textSize="22dp"
        android:textColor="#000000"/>
    </LinearLayout>
  
    <com.amap.api.maps2d.MapView
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_layout"
        android:layout_toLeftOf="@+id/text_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:padding="2dp"
        android:background="@drawable/black_bg">
    </com.amap.api.maps2d.MapView> 
         <TextView
            android:id="@+id/textview1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/top_layout"
            android:layout_marginTop="20dp"
            android:background="#eff7f9"
            android:textSize="20dp"
            android:gravity="center"
            android:text="实 "
            android:textColor="#000000"
            android:layout_marginLeft="40dp" />
         <View
             android:id="@+id/line2"
             android:layout_width="1dp"
             android:layout_height="60dp"
             android:background="#000000"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textview1"
            android:layout_below="@+id/top_layout"/>
           <TextView
            android:id="@+id/textview2"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_below="@+id/top_layout"
            android:layout_toRightOf="@+id/line2"
            android:layout_marginTop="20dp"
            android:background="#eff7f9"
            android:textSize="20dp"
            android:gravity="center"
            android:text="32.45 "
            android:textColor="#000000"/>
         <View 
             android:id="@+id/line1"
             android:layout_width="180dp"
             android:layout_height="1dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/textview1"
             android:background="#000000"/>
            <TextView
            android:id="@+id/textview3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/line1"
            android:background="#eff7f9"
            android:textSize="20dp"
            android:gravity="center"
            android:text="平 "
            android:textColor="#000000"
            android:layout_marginLeft="40dp" />
            <View 
                android:id="@+id/line3"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_below="@+id/line2"
                android:background="#000000"
                android:layout_toRightOf="@+id/textview3"/>
            <TextView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_below="@+id/line1"
            android:background="#eff7f9"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/line3"
            android:gravity="center"
            android:text="29.23"
            android:textColor="#000000"/>
         <TextView
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@+id/top_layout"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="#d0edf3"
            android:textColor="#000000"
            android:textSize="16dp"
            android:gravity="center"
            android:text="深松作业模式" />
        <TextView
            android:id="@+id/layers_tv"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_below="@+id/top_layout"
            android:layout_marginTop="20dp"
            android:background="#d0edf3"
            android:textSize="16dp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginLeft="900dp" />
      
         <SurfaceView   
             android:layout_width="300dp"  
             android:layout_height="200dp"  
            android:id="@+id/surfaceview"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"/>
          <Button
            android:id="@+id/switch_btn"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textSize="16dp"
            android:gravity="center"
            android:background="@null"
            android:text="切换摄像头"
            android:textColor="#000000"/> 

</RelativeLayout>
